<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel='stylesheet' type='text/css' href='../../public/styles/css/styles.css' />
    <title>Listado de prodcutos / Formulario</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
</head>

<body>
    <%- include('../partials/navbar'); %>
        <h1>Listado de productos</h1>
        <div>
            <form action="">
                <input type="text" placeholder="Buscar Producto">
                <button type="submit" class="my-button">Buscar</button>
            </form>

        </div>
        <div class="carrito">
            <button class="" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight"
              aria-controls="offcanvasRight"><img src="https://cdn-icons-png.flaticon.com/512/3523/3523887.png"
                title="Carrito de compras" alt="Carrito logo"><span id="productosCounter">0</span></button>
          </div>

        <div class="products-container">
            <% if(products?.length> 0){ %>
                <% products.forEach((item)=>{ %>
                    <div class="products-card">
                        <img class="product-img" src="<%=item.thumbnail %>" />
                        <p>ID: <%=item.id%>
                        </p>
                        <p>Producto: <%=item.nombre%>
                        </p>
                        <p>Precio: $ <%=item.precio%>
                        </p>
                        <div>
                            <button class="my-button">Eliminar</button>
                            <button class="my-button">Editar</button>
                        </div>

                    </div>
                    <% }) %>
                        <% } else { %>
                            no hay productos!!!
                            <% } %>
        </div>
            <!-- Carrito canvas -->
    <div class="offcanvas offcanvas-end my-canvas" tabindex="-1" id="offcanvasRight"
    aria-labelledby="offcanvasRightLabel">
    <div class="products-container">
        <% if(carts?.length> 0){ %>
            <% carts.forEach((item)=>{ %>
                <div class="products-card">
                    <img class="product-img" src="<%=item.thumbnail %>" />
                    <p>ID: <%=item.id%>
                    </p>
                    <p>Producto: <%=item.nombre%>
                    </p>
                    <p>Precio: $ <%=item.precio%>
                    </p>
                    <div>
                        <button class="my-button">Eliminar</button>
                        <button class="my-button">Editar</button>
                    </div>

                </div>
                <% }) %>
                    <% } else { %>
                        no hay productos!!!
                        <% } %>
    </div>
    <div class="offcanvas-header">
      <h5 class="offcanvas-title" id="offcanvasRightLabel">Carrito de compras:</h5>
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body" id="carrito-wrapper">
      ...
    </div>
    <p class="totalCarrito">
      Precio total: $<span id="totalPrecioCarrito">0</span>
    </p>
    <div class="botonCarrito">
      <button id="pagarTotal" type="button" class="btn btn-primary pagar">
        Pagar
      </button>
      <button id="vaciarCarrito" type="button" class="btn btn-primary vaciar-carrito">
        Vaciar carrito
      </button>
    </div>
  </div>
        
        <a class="my-button" href="./form">Ir a Formulario</a>
        <%- include('../partials/footer'); %>
          <!-- Bootstrap Separate -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
  integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
  crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
  integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
  crossorigin="anonymous"></script>
</body>

</html>